<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
       {% block stylesheets %}
           {{ encore_entry_link_tags('app') }}
       {% endblock %}

       {% block javascripts %}
           {{ encore_entry_script_tags('app') }}
       {% endblock %}

    </head>
    <body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
        <h5 class="my-0 mr-md-auto font-weight-normal">Company name</h5>
        <nav class="my-2 my-md-0 mr-md-3">
            <a class="p-2 text-dark" href="{{ path('app_chamber_index') }}">Kamer</a>
            <a class="p-2 text-dark" href="#">Enterprise</a>
            <a class="p-2 text-dark" href="#">Support</a>
            <a class="p-2 text-dark" href="{{ path('admin') }}">Admin</a>
        </nav>
        {% if app.user %}
        <a class="btn btn-outline-primary" href="{{ path('app_logout') }}">Uitloggen</a>
        {% else %}
        <a class="btn btn-outline-primary" href="{{ path('app_login') }}">Inloggen</a>
        {% endif %}
    </div>

    {% block body %}{% endblock %}

    </body>
</html>
